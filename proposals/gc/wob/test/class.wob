// Base classes

class Counter(x : Int) {
  let a = x;
  var c : Int = a;
  func get() : Int { return c };
  func set(x : Int) { c := x };
  func inc() { c := c + 1 };
};

let c = new Counter(5);
assert c.a == 5;
assert c.c == 5;
assert c.get() == 5;

c.inc();
assert c.a == 5;
assert c.c == 6;
assert c.get() == 6;

c.set(10);
assert c.a == 5;
assert c.c == 10;
assert c.get() == 10;
